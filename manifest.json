{
  "name": "emoticontext thinks", //change this to change the alert box title text
  "version": "1.0",
  "description": "Emoticontext - sentiment analysis",
  "permissions": ["activeTab","declarativeContent"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Emoticontext",
    "default_icon": {
      "120": "icons/sparkles_120.png"
    }
  },
  "icons": {
    "120": "icons/negative_120.png",
    "120": "icons/neutral_120.png",
    "120": "icons/strong_positive_120.png"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com ; object-src 'self'",
  "manifest_version": 2
}